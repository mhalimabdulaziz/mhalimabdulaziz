<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
<h2><i class="bi bi-list"></i> Daftar Produk</h2>
<a href="/add" class="btn btn-primary">
<i class="bi bi-plus-circle"></i> Tambah Produk Baru
</a>
</div>

<% if (products && products.length > 0) { %>
<div class="table-responsive">
<table class="table table-hover table-bordered">
<thead class="table-dark">
<tr>
<th width="50">No</th>
<th>Nama Produk</th>
<th width="150">Harga</th>
<th>Deskripsi</th>
<th width="200">Tanggal Dibuat</th>

<th width="150" class="text-center">Aksi</th>
</tr>
</thead>
<tbody>
<% products.forEach((product, index) => { %>
<tr>
<td class="text-center"><%= index + 1 %></td>
<td><%= product.name %></td>
<td class="text-end">Rp <%=
parseFloat(product.price).toLocaleString('id-ID') %></td>
<td><%= product.description || '-' %></td>
<td><%= new
Date(product.created_at).toLocaleDateString('id-ID') %></td>
<td class="text-center">
<div class="btn-group" role="group">

<a href="/edit/<%= product.id %>" class="btn btn-
warning btn-sm">

<i class="bi bi-pencil"></i> Edit
</a>
<a href="/delete/<%= product.id %>"
class="btn btn-danger btn-sm"
onclick="return confirm('Apakah Anda yakin ingin
menghapus produk ini?')">
<i class="bi bi-trash"></i> Hapus
</a>
</div>
</td>

</tr>
<% }) %>
</tbody>
</table>
</div>
<% } else { %>
<div class="alert alert-info">
<i class="bi bi-info-circle"></i> Belum ada produk.
<a href="/add" class="alert-link">Klik di sini untuk menambah produk
pertama</a>
</div>
<% } %>

<%- include('partials/footer') %>
4.3 Form Tambah Produk (views/add-product.ejs)
<%- include('partials/header') %>

<div class="row">
<div class="col-md-8 offset-md-2">
<div class="card">
<div class="card-header bg-primary text-white">
<h4 class="mb-0"><i class="bi bi-plus-circle"></i> Tambah
Produk Baru</h4>
</div>
<div class="card-body">
<a href="/" class="btn btn-secondary mb-3">

<i class="bi bi-arrow-left"></i> Kembali ke Daftar
</a>

<form action="/add" method="POST" id="productForm">
<div class="mb-3">
<label for="name" class="form-label">Nama Produk
<span class="text-danger">*</span></label>
<input type="text" class="form-control" id="name"
name="name" required
placeholder="Masukkan nama produk">
</div>

<div class="mb-3">
<label for="price" class="form-label">Harga <span
class="text-danger">*</span></label>
<div class="input-group">
<span class="input-group-text">Rp</span>
<input type="number" class="form-control"
id="price" name="price"
step="0.01" min="0" required
placeholder="0.00">
</div>
</div>

<div class="mb-3">

<label for="description" class="form-
label">Deskripsi</label>

<textarea class="form-control" id="description"
name="description"

rows="4" placeholder="Masukkan deskripsi
produk (opsional)"></textarea>
</div>

<div class="d-grid gap-2 d-md-flex justify-content-md-
end">

<button type="reset" class="btn btn-outline-
secondary me-md-2">

<i class="bi bi-x-circle"></i> Reset
</button>
<button type="submit" class="btn btn-success">
<i class="bi bi-save"></i> Simpan Produk
</button>
</div>
</form>
</div>
</div>
</div>
</div>

<%- include('partials/footer') %>